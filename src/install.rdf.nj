<?xml version="1.0" encoding="utf-8"?>
<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:em="http://www.mozilla.org/2004/em-rdf#">
<Description about="urn:mozilla:install-manifest">

    <em:id>referrercontrol@qixinglu.com</em:id>
    <em:version>{{ version }}</em:version>
    <em:type>2</em:type>
    <em:bootstrap>true</em:bootstrap>
    <em:unpack>{{ unpack }}</em:unpack>

    <!-- Front End MetaData -->
    <em:name>Referrer Control</em:name>
    <em:description>Control http request referrer</em:description>
    <em:creator>muzuiget</em:creator>

    <!-- Firefox -->
    <em:targetApplication>
    <Description>
        <em:id>{ec8030f7-c20a-464f-9b0e-13a3a9e97384}</em:id>
        <em:minVersion>35.0</em:minVersion>
        <em:maxVersion>36.*</em:maxVersion>
    </Description>
    </em:targetApplication>

    <!-- Localize -->
    <em:localized>
{% for locale in locales %}
    <Description>
        <em:locale>{{ locale.lang }}</em:locale>
        <em:name>{{ locale.name }}</em:name>
        <em:description>{{ locale.desc }}</em:description>
    </Description>
{% endfor %}
    </em:localized>

</Description>
</RDF>
